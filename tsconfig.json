{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "Node",

    "outDir": "./dist",
    "rootDir": "./src",

    "strict": true,
    "noImplicitAny": false,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "sourceMap": true,
    "incremental": true
  },
  "include": ["src"]
}
